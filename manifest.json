{
  "manifest_version": 3,
  "name": "Peripeek Chrome Extension",
  "version": "1.0.0",
  "description": "A Chrome extension that opens a custom HTML page",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "debugger",
    "storage",
    "declarativeNetRequest",
    "cookies"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src *;"
  },
  "action": {
    "default_title": "Peripeek"
  },
  "background": {
    "service_worker": "sw.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["custom.html", "custom.js", "panzoom.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  }
} 