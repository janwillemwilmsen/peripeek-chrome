{
  "manifest_version": 3,
  "name": "Peripeek Chrome Extension",
  "version": "1.0.0",
  "description": "A Chrome extension that toggles between custom HTML and original URL",
  "permissions": [
    "activeTab",
    "storage",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Peripeek"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["custom.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  }
} 